{{#if user}}



    <main class="col-lg-12" style="margin-bottom: 50px;">
      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Dashboard</h1>
      </div>

     <div class="card">
       <div class="card-header border-bottom">
         <h5 class="mb-0">Latest posts</h5>
       </div>
       <div class="table-responsive">
         <table class="table table-hover table-nowrap">
           <thead class="table-light">
             <tr>
               <th scope="col">Title</th>
               <th scope="col">Date</th>
               <th scope="col">Options</th>
               </tr>
           </thead>
           <tbody>
             {{#each blogPosts}}
              <tr>
                <td><a href="/view/{{this.id}}"> {{this.title}} </a></td>
                <td>{{this.publishedAt}}</td>
                <td>
                 <a href="/edit/{{this.id}}" class="btn btn-default btn-sm" data-toggle="tooltip" data-placement="top" title="Edit">
                    Edit
                 </a>
                  <a href="/delete/{{this.id}}" class="btn btn-default btn-sm" data-toggle="tooltip" data-placement="top" title="Delete">
                    Delete
                 </a>
                </td>
              </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
 
    </main>

{{/if}}