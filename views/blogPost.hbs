
{{#if user}}

    <main class="col-lg-8">
      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">New Post</h1>
       
      </div>

      <div class="container col-lg-9">

              
                <form action="/create" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                  <label for="exampleFormControlInput1">Title</label>
                  <input name="title" type="text" class="form-control" placeholder="Title" required>
                </div>
                
                
                <div class="form-group">
                   Image
                  <input name="image-file" type="file" class="form-control form-control-file" required>   
                  <label for="exampleFormControlTextarea1">Text</label>
                  <textarea name="text" class="form-control" rows="3" required></textarea>

                 
                  <input class="form-control btn btn-primary" type="submit" style="margin-top: 5px;margin-bottom: 5px;" value="Publish">
                </div>
               
               </form>
             

      </div>

 
    </main>

{{/if}}