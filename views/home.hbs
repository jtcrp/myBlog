 <!-- Blog entries-->
<div class="col-lg-12">
    <!-- Nested row for non-featured blog posts-->
    <div class="row">
        {{#each homeView}}
        <div class="col-lg-3 d-flex align-items-stretch">
            <!-- Blog post-->
            <div class="card mb-2 ">
                <a href="#!"><img class="card-img-top" src="../images/{{this.image}}" alt="..." /></a>
                <div class="card-body">
                    <div class="small text-muted">{{this.publishedAt}}</div>
                    <h2 class="card-title h4">{{this.title}}</h2>
                    <p class="card-text">{{truncate this.content}}</p>
                    <a class="btn btn-primary" href="/view/{{this.id}}">Read more â†’</a>
                </div>
            </div>
        </div>
       {{/each}}
    </div>
</div>

